<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" />
    <!-- Base application theme. -->
    <style name="AppTheme.BaseTheme" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="recyclerViewStyle">@style/AppTheme.RecyclerView.Default</item>

        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="AppTheme.Theme" parent="AppTheme.BaseTheme" />

    <style name="AppTheme.Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>